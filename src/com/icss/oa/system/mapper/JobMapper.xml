<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.icss.oa.system.dao.JobMapper">

	<!-- 结果集映射 -->
	<resultMap id="BaseResultMap" type="com.icss.oa.system.pojo.Job">
		<id column="job_id" property="jobId" jdbcType="INTEGER" />
		<result column="job_name" property="jobName" jdbcType="VARCHAR" />
		<result column="job_min_sal" property="jobMinSal" jdbcType="INTEGER" />
		<result column="job_max_sal" property="jobMaxSal" jdbcType="INTEGER" />
	</resultMap>

	<insert id="insert" parameterType="com.icss.oa.system.pojo.Job">
		insert into job (job_id,
		job_name, job_min_sal,
		job_max_sal)
		values (default,
		#{jobName,jdbcType=VARCHAR},
		#{jobMinSal,jdbcType=INTEGER},
		#{jobMaxSal,jdbcType=INTEGER})
	</insert>

	<update id="update" parameterType="com.icss.oa.system.pojo.Job">
		update job
		set job_name =
		#{jobName,jdbcType=VARCHAR},
		job_min_sal =
		#{jobMinSal,jdbcType=INTEGER},
		job_max_sal =
		#{jobMaxSal,jdbcType=INTEGER}
		where job_id = #{jobId,jdbcType=INTEGER}
	</update>

	<delete id="delete" parameterType="java.lang.Integer">
		delete from job
		where job_id =
		#{jobId,jdbcType=INTEGER}
	</delete>
		
	<select id="queryById" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select *		
		from job
		where job_id = #{jobId,jdbcType=INTEGER}
	</select>
	
	<select id="query" resultMap="BaseResultMap" >
		select *		
		from job order by job_id
		LIMIT #{start},#{pageSize}		
	</select>
	

</mapper>